[flake8]
max-line-length = 127
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    migrations,
    alembic,
    .pytest_cache
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811